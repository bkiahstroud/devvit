<%= simple_form_for post do |f| %>
  <%= f.error_notification %>

  <%= f.input :title %>
  <%= f.input :subdevvit_id, collection: Subdevvit.all, include_blank: false %>
  <%= f.input :text, as: :text %>
  <%= f.input :upvotes, as: :integer %>
  <%= f.input :downvotes, as: :integer %>
  <%= f.button :submit %>
<% end %>
